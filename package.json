{
  "name": "liascript-preview",
  "displayName": "LiaScript-Preview",
  "description": "Preview LiaScript courses within the browser",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:liascript-preview.liascript-preview",
    "onCommand:liascript-preview.liascript-test",
    "onCommand:liascript-preview.liascript-stop"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "liascript-preview.liascript-preview",
        "title": "LiaScript - Preview"
      },
      {
        "command": "liascript-preview.liascript-test",
        "title": "LiaScript - Test"
      },
      {
        "command": "liascript-preview.liascript-stop",
        "title": "LiaScript - Stop"
      }
    ],
    "keybindings": [
      {
        "command": "liascript-preview.liascript-preview",
        "key": "alt+l",
        "mac": "alt+l"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@liascript/devserver": "^1.0.9--0.10.8",
    "open": "^8.4.0"
  }
}
